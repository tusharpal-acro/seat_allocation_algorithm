<p id="notice"><%= notice %></p>

<h1>Movies</h1>

<table class= "table table-hover">
  <thead>
    <tr>
      <th>Movie name</th>
      <th>Year</th>
      <th>Summary</th>
      <th>Imdb</th>
      <th>Genre</th>
      <th>Venue</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @movies.each do |movie| %>
      <tr>
        <td><%= movie.movie_name %></td>
        <td><%= movie.year %></td>
        <td><%= movie.summary %></td>
        <td><%= movie.imdb %></td>
        <td><%= movie.genre %></td>
        <td><%= movie.venue.name %></td>
        <td><%= link_to 'Show', movie %></td>
        <td><%= link_to 'Edit', edit_movie_path(movie) %></td>
        <td><%= link_to 'View Seats', movie_seats_path(movie) %></td>
        <td><%= link_to 'Destroy', movie, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

